SHELL = @SHELL@

FC      = @FC@
FCFLAGS = -I../include @FCFLAGS@

UTFC    = ../scripts/unittest_f90

CC      = @CC@
CFLAGS  = @CFLAGS@

CXX     = @CXX@
CXXFLAGS= @CXXFLAGS@

MAKE    = @MAKE@
AR  = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/lib@FLUIDITY@.a

TESTLIBS = $(shell echo @LIBS@ | sed 's@./lib/lib\([a-z]*\)\.a@-l\1@g')

# These are all the objects that are supposed to go into the makefile
OBJS = Extrude.o Extrude_radially.o Advancing_front.o Metric_based_extrude.o Combine_Meshes.o

.SUFFIXES: .f90 .F90 .c .o .a

.f90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -I../include -c $< || (rm $(LIB) && false)

default: $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)
	cp *.mod ../include/

clean:
	rm -f *.o *.mod

Combine_Meshes.o: Advancing_front.o

Extrude.o: Combine_Meshes.o

Metric_based_extrude.o: Combine_Meshes.o Extrude.o

Extrude_radially.o: Combine_Meshes.o
