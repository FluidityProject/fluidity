SHELL = @SHELL@

FC      = @FC@
FCFLAGS = -I../include @CPPFLAGS@ @FCFLAGS@ -I/usr/local/include -I./

MPIF90  = @MPIF90@

CC      = @CC@
CFLAGS  = @CPPFLAGS@ @CFLAGS@ -I../include -I/usr/local/include 

CXX     = @CXX@
CXXFLAGS= @CPPFLAGS@ @CXXFLAGS@ -I../include -I/usr/local/include

MAKE    = @MAKE@

AR = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/lib@FLUIDITY@.a

LIBS    = -L../lib ../lib/libvtkfortran.a -l@FLUIDITY@ @LIBS@ @BLAS_LIBS@

LINKER  = @LINKER@ @LDFLAGS@ @CPPFLAGS@ 

TESTLIBS = $(shell echo @LIBS@ | sed 's@./lib/lib\([a-z]*\)\.a@-l\1@g')

OBJS = Populate_State.o Populate_Sub_State.o Reserve_State.o Field_Priority_Lists.o\
       Physics_From_Options.o VTK_Cache.o Initialise_Fields.o \
			 Boundary_Conditions_From_Options.o synthetic_bc.o Tidal_Modelling.o

.SUFFIXES: .f90 .F90 .cpp .c .o .a

# cancel implicit rule that tries to make .o from .mod with m2c:
%.o: %.mod

.f90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.c.o:
	@echo "        CC $<"
	$(CC) $(CFLAGS) -c $< || (rm $(LIB) && false)
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -c $< || (rm $(LIB) && false)

default: $(OBJS)
	@mkdir -p ../lib
	@$(AR) $(ARFLAGS) $(LIB) $(OBJS) >/dev/null 2>&1
	cp *.mod ../include/

Populate_State.o: Reserve_State.o VTK_Cache.o Initialise_Fields.o \
   Boundary_Conditions_From_Options.o Field_Priority_Lists.o
Populate_Sub_State.o: Populate_State.o
Boundary_Conditions_From_Options.o: Initialise_Fields.o synthetic_bc.o Tidal_Modelling.o
Initialise_Fields.o: VTK_Cache.o  Physics_From_Options.o


.PHONY:check_options

# This gets run last by the fluidity build process.
check_options: check_options.o
	mkdir -p ../lib
	$(AR) $(ARFLAGS) $(LIB) check_options.o &> check.log

clean:
	rm -f *.o *.d *.mod

