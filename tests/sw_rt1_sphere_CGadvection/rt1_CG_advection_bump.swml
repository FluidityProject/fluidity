        <initial_condition name="WholeMesh">
          <python>
            <string_value lines="20" type="code" language="python">def val(X,t):
  from math import atan2, asin, exp
  x=X[0]
  y=X[1]
  z=X[2]
  R=(x**2+y**2+z**2)**0.5
  x=x/R
  y=y/R
  z=z/R
  phi = atan2(y,x) #longitude
  theta = asin(z)
  rsq = phi**2+theta**2
  h = 0.5
  return exp(-rsq/h**2)</string_value>
