            <type name="dirichlet">
              <apply_weakly/>
              <python>
                <string_value type="code" language="python" lines="20">def val(X,t):
	from math import cos, pi
	day=3600*24.
	year=365.*day
	
	light=100*(1-cos(2*pi*t/year))+10
	return light</string_value>
              </python>
            </type>
