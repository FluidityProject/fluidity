      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value type="code" lines="20" language="python">def val(X, t):
    from numpy import floor, array
    c = abs(floor(array(X) - [0.3, 0.6]))
    u = c[0]*0.5 + c[1]*1.0
    v = c[0]*0.3 + c[1]*2.4
    return u, v</string_value>
          </python>
        </value>
        <output/>
