        </stat>
        <detectors>
          <exclude_from_detectors/>
        </detectors>
      </prescribed>
    </vector_field>
    <scalar_field name="VelocityDiv" rank="0">
      <diagnostic>
        <algorithm name="scalar_python_diagnostic" material_phase_support="single">
          <string_value type="code" lines="20" language="python">import fluidity_tools

E=state.tensor_fields["DGVelocityGradient"]

for n in range(field.node_count):
    field.set(n,0.0)
    for i in range(2):
        field.addto(n,E.node_val(n)[i,i])
    # print E.node_val(n) 
    # print field.node_val(n)</string_value>
        </algorithm>
