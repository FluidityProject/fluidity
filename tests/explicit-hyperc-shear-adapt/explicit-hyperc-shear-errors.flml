<?xml version='1.0' encoding='utf-8'?>
<fluidity_options>
  <simulation_name>
    <string_value lines="1">explicit-hyperc-shear-error</string_value>
  </simulation_name>
  <problem_type>
    <string_value lines="1">fluids</string_value>
  </problem_type>
  <geometry>
    <dimension>
      <integer_value rank="0">2</integer_value>
    </dimension>
    <mesh name="CoordinateMesh">
      <from_file file_name="2d_square">
        <format name="gmsh"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
    </mesh>
    <mesh name="VelocityMesh">
      <from_mesh>
        <mesh name="CoordinateMesh"/>
        <mesh_shape>
          <polynomial_degree>
            <integer_value rank="0">0</integer_value>
          </polynomial_degree>
        </mesh_shape>
        <mesh_continuity>
          <string_value>discontinuous</string_value>
        </mesh_continuity>
        <stat>
          <exclude_from_stat/>
        </stat>
      </from_mesh>
    </mesh>
    <mesh name="PressureMesh">
      <from_mesh>
        <mesh name="CoordinateMesh"/>
        <stat>
          <exclude_from_stat/>
        </stat>
      </from_mesh>
    </mesh>
    <mesh name="SuperMesh">
      <from_file file_name="merged_mesh">
        <format name="gmsh"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
      <exclude_from_mesh_adaptivity/>
    </mesh>
    <mesh name="InitialMesh">
      <from_file file_name="explicit-hyperc-shear-conservative_CoordinateMesh_0_checkpoint">
        <format name="gmsh"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
      <exclude_from_mesh_adaptivity/>
    </mesh>
    <mesh name="FinalMesh">
      <from_file file_name="explicit-hyperc-shear-conservative_checkpoint_CoordinateMesh_16_checkpoint">
        <format name="gmsh"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
      <exclude_from_mesh_adaptivity/>
    </mesh>
    <quadrature>
      <degree>
        <integer_value rank="0">1</integer_value>
      </degree>
      <controlvolume_surface_degree>
        <integer_value rank="0">1</integer_value>
      </controlvolume_surface_degree>
    </quadrature>
  </geometry>
  <io>
    <dump_format>
      <string_value>vtk</string_value>
    </dump_format>
    <dump_period_in_timesteps>
      <constant>
        <integer_value rank="0">1</integer_value>
      </constant>
    </dump_period_in_timesteps>
    <output_mesh name="SuperMesh"/>
    <checkpointing>
      <checkpoint_period_in_dumps>
        <integer_value rank="0">2</integer_value>
        <comment>10</comment>
      </checkpoint_period_in_dumps>
    </checkpointing>
    <stat/>
  </io>
  <timestepping>
    <current_time>
      <real_value rank="0">0.0</real_value>
    </current_time>
    <timestep>
      <real_value rank="0">0.1</real_value>
      <comment>this is overwritten by the adaptive timestepping but roughly corresponds to a cfl of 0.1</comment>
    </timestep>
    <finish_time>
      <real_value rank="0">0.1</real_value>
      <comment>corresponds to 2010 timesteps (looks like half of Rudman) of the nonadaptive case</comment>
    </finish_time>
  </timestepping>
  <physical_parameters/>
  <material_phase name="Error">
    <vector_field rank="1" name="Velocity">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <constant>
            <real_value rank="1" dim1="dim" shape="2">0.0 0.0</real_value>
          </constant>
        </value>
        <output>
          <exclude_from_vtu/>
        </output>
        <stat>
          <include_in_stat/>
        </stat>
        <detectors>
          <exclude_from_detectors/>
        </detectors>
        <particles>
          <exclude_from_particles/>
        </particles>
        <do_not_recalculate/>
      </prescribed>
    </vector_field>
    <scalar_field rank="0" name="MaterialVolumeFraction">
      <prescribed>
        <mesh name="FinalMesh"/>
        <value name="WholeMesh">
          <from_file file_name="explicit-hyperc-shear-conservative_checkpoint_Material1_PressureMesh_16_checkpoint.vtu">
            <format name="vtu"/>
          </from_file>
        </value>
        <output>
          <exclude_from_vtu/>
        </output>
        <stat/>
        <detectors>
          <exclude_from_detectors/>
        </detectors>
        <particles>
          <exclude_from_particles/>
        </particles>
        <do_not_recalculate/>
      </prescribed>
    </scalar_field>
    <scalar_field rank="0" name="AnalyticalMaterialVolumeFraction">
      <prescribed>
        <mesh name="InitialMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value type="code" language="python" lines="20">def val(X,t):
	from math import sqrt, pi
	dx1 = X[0]-pi/2
	dx2 = X[1]-0.2*(1.0+pi)
	r=sqrt(dx1*dx1+dx2*dx2)
	if (r&lt;=(pi/5)):
		return 1.0
	else:
		return 0.0</string_value>
          </python>
        </value>
        <output>
          <exclude_from_vtu/>
        </output>
        <stat/>
        <detectors>
          <exclude_from_detectors/>
        </detectors>
        <particles>
          <exclude_from_particles/>
        </particles>
        <do_not_recalculate/>
      </prescribed>
    </scalar_field>
    <scalar_field rank="0" name="ScalarAbsoluteDifference">
      <diagnostic field_name_a="MaterialVolumeFraction" field_name_b="AnalyticalMaterialVolumeFraction">
        <algorithm name="Internal" material_phase_support="multiple"/>
        <mesh name="SuperMesh"/>
        <output/>
        <stat/>
        <convergence>
          <include_in_convergence/>
        </convergence>
        <detectors>
          <include_in_detectors/>
        </detectors>
        <particles>
          <exclude_from_particles/>
        </particles>
        <steady_state>
          <include_in_steady_state/>
        </steady_state>
        <do_not_recalculate/>
      </diagnostic>
    </scalar_field>
  </material_phase>
  <material_phase name="Dummy">
    <vector_field rank="1" name="Velocity">
      <aliased material_phase_name="Error" field_name="Velocity"/>
    </vector_field>
    <scalar_field rank="0" name="MaterialVolumeFraction">
      <diagnostic>
        <algorithm name="Internal" material_phase_support="multiple"/>
        <mesh name="FinalMesh"/>
        <output>
          <exclude_from_vtu/>
        </output>
        <stat/>
        <convergence>
          <include_in_convergence/>
        </convergence>
        <detectors>
          <include_in_detectors/>
        </detectors>
        <particles>
          <exclude_from_particles/>
        </particles>
        <steady_state>
          <include_in_steady_state/>
        </steady_state>
      </diagnostic>
    </scalar_field>
  </material_phase>
</fluidity_options>
