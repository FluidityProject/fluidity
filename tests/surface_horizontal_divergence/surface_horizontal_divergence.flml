      <diagnostic>
        <algorithm name="surface_horizontal_divergence" material_phase_support="single" source_field_name="SurfaceField" source_field_type="vector">
          <surface_ids>
            <integer_value rank="1" shape="1">1</integer_value>
          </surface_ids>
        </algorithm>
        <mesh name="CoordinateMesh"/>
        <output/>
        <stat/>
