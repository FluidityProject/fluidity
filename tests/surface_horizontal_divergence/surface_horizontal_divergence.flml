  </problem_type>
  <geometry>
    <dimension>
      <integer_value rank="0">2</integer_value>
    </dimension>
    <mesh name="CoordinateMesh">
      <from_file file_name="src/slope">
        <format name="gmsh"/>
        <stat>
          <include_in_stat/>
        </stat>
