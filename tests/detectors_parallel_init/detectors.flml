<?xml version='1.0' encoding='utf-8'?>
<fluidity_options>
  <simulation_name>
    <string_value lines="1">detectors</string_value>
  </simulation_name>
  <problem_type>
    <string_value lines="1">fluids</string_value>
  </problem_type>
  <geometry>
    <dimension>
      <integer_value rank="0">2</integer_value>
    </dimension>
    <mesh name="CoordinateMesh">
      <from_file file_name="square">
        <format name="gmsh"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
    </mesh>
    <mesh name="VelocityMesh">
      <from_mesh>
        <mesh name="CoordinateMesh"/>
        <stat>
          <exclude_from_stat/>
        </stat>
      </from_mesh>
    </mesh>
    <quadrature>
      <degree>
        <integer_value rank="0">6</integer_value>
      </degree>
    </quadrature>
  </geometry>
  <io>
    <dump_format>
      <string_value>vtk</string_value>
    </dump_format>
    <dump_period>
      <constant>
        <real_value rank="0">0.0</real_value>
      </constant>
    </dump_period>
    <output_mesh name="VelocityMesh"/>
    <stat/>
    <detectors>
      <static_detector name="MidPoint">
        <location>
          <real_value shape="2" dim1="dim" rank="1">0.5 0.5</real_value>
        </location>
      </static_detector>
      <detector_array name="DArray">
        <number_of_detectors>
          <integer_value rank="0">3</integer_value>
        </number_of_detectors>
        <static/>
        <from_file file_name="positions.dat">
          <format>
            <string_value>binary</string_value>
          </format>
        </from_file>
      </detector_array>
      <fail_outside_domain/>
    </detectors>
  </io>
  <timestepping>
    <current_time>
      <real_value rank="0">0.0</real_value>
    </current_time>
    <timestep>
      <real_value rank="0">1.0</real_value>
    </timestep>
    <finish_time>
      <real_value rank="0">1.0</real_value>
    </finish_time>
  </timestepping>
  <physical_parameters/>
  <material_phase name="Water">
    <vector_field name="Velocity" rank="1">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value lines="20" type="code" language="python">def val(X,t):
	return(X[1],0.0)</string_value>
          </python>
        </value>
        <output/>
        <stat>
          <include_in_stat/>
        </stat>
        <detectors>
          <include_in_detectors/>
        </detectors>
      </prescribed>
    </vector_field>
    <scalar_field name="Tracer" rank="0">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value lines="20" type="code" language="python">def val(X,t):
	return X[0]</string_value>
          </python>
        </value>
        <output/>
        <stat/>
        <detectors>
          <include_in_detectors/>
        </detectors>
      </prescribed>
    </scalar_field>
  </material_phase>
  <flredecomp>
    <final_partitioner>
      <zoltan>
        <method>graph</method>
      </zoltan>
    </final_partitioner>
  </flredecomp>
</fluidity_options>
