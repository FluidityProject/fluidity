        <initial_condition name="WholeMesh">
          <python>
            <string_value type="code" language="python" lines="20">def val(X,t):
  from math import sqrt, pi, exp
  x = X[0]
  nu = 0.025
  l = 1.0/(2.0*nu) - sqrt(1.0/(4.0*nu*nu) + 4*pi*pi)
  return 0.5*(1.0 - exp(2*l*x))</string_value>
          </python>
        </initial_condition>
