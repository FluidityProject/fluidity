import math

S = state.scalar_fields["StrainRateSecondInvariant"]

assert(S.node_count == field.node_count)

A = 4.75e11
n = 4.0
mu_min = 1e18
mu_max = 1e25

visc = numpy.zeros((2,2))

for node in range(field.node_count):
  epsilon_dot = max(1e-40,S.node_val(node))
  mu = A*epsilon_dot**(1.0/n-1.0)
  mu = max(mu,mu_min)
  mu = min(mu,mu_max)
  for i in range(2):
    for j in range(2):
      visc[i,j] = mu
  field.set(node,visc)</string_value>
