            <string_value>vtk</string_value>
        </dump_format>
        <dump_period_in_timesteps>
            <constant>
                <integer_value rank="0">125</integer_value>
            </constant>
        </dump_period_in_timesteps>
        <output_mesh name="PressureMesh"></output_mesh>
