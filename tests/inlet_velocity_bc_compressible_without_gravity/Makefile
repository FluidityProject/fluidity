preprocess:
	@echo **********Creating 1D mesh
	interval --dx=100.0 -- 0.0 10000.0 line
	@echo **********Creating 2D mesh
	gmsh -2 -o inlet_velocity_bc_compressible_without_gravity_pseudo1d.msh src/inlet_velocity_bc_compressible_without_gravity_pseudo1d.geo
	gmsh2triangle --2d inlet_velocity_bc_compressible_without_gravity_pseudo1d.msh

run:
	@echo **********Running simulation
	fluidity inlet_velocity_bc_compressible_without_gravity_1d.flml
	fluidity inlet_velocity_bc_compressible_without_gravity_pseudo1d.flml

input: clean preprocess

clean:
	rm -f *.stat *.steady_state*
	rm -f *.d.* *.vtu
	rm -f *.msh
	rm -f *.ele *.edge *.node *.poly *.bound
	rm -f matrixdump* *.log* *.err*

