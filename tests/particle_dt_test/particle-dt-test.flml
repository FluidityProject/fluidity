        <initial_position>
          <python>
            <string_value lines="20" type="code" language="python">def val(t):
  from numpy import arange,zeros,reshape,concatenate,cos,pi
  c=1
  x=zeros(c,float)
  y=zeros(c,float)
  x=0.25
  y=0.25

  return reshape((x,y),(2,c)).T</string_value>
          </python>
        </initial_position>
        <attributes>
          <attribute name="DtVal">
            <python_fields>
              <string_value lines="20" type="code" language="python">def val(X,t,dt,fields):
  x = dt
  return x</string_value>
              <store_old_attribute/>
            </python_fields>
          </attribute>
          <attribute name="Dtchange">
            <python_fields>
              <string_value lines="20" type="code" language="python">def val(X,t,dt,fields):
  oldDT = fields["OldDtVal"]
  x = dt - oldDT
  return x</string_value>
            </python_fields>
          </attribute>
        </attributes>
      </particle_subgroup>
    </particle_group>
