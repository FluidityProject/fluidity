    <scalar_field name="Temperature" rank="0">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value lines="20" type="code" language="python">def val(X,t):
  import scipy.special, numpy, math
  # Specify spherical harmonic coefficients:
  l = 3 # degree
  m = 2 # order
  eps_c = 1.0
  eps_s = 1.0

  # Store coordinates as straightforward variables:
  X0 = X[0]
  X1 = X[1]
  X2 = X[2]

  # Convert from Cartesian to Spherical (in degrees):
  r     = math.sqrt(X0**2+X1**2+X2**2) # r
  theta = math.atan2(X1,X0) # Theta (longitude - different symbol to Zhong)           
  phi   = math.atan2(math.sqrt(X0**2+X1**2), X2)  # Phi (co-latitude - different symbol to Zhong)

  # Calculate spharical harmonic initial condition:
  ri = 1.22
  ro = 2.22
  conductive_term = ( (ri*(r - ro)) / (r*(ri - ro)) )
  Plm = scipy.special.lpmv(m,l,math.cos(phi))
  Plm = math.sqrt(((2*l+1)*math.factorial(l-m))/(2*math.pi*math.factorial(l+m)))*Plm
  if m == 0: Plm = Plm/math.sqrt(2)
  T  = conductive_term + (eps_c*math.cos(m*theta) + eps_s*math.sin(m*theta) ) * Plm * math.sin((math.pi*(r - ri))/(ro-ri))
  T  = numpy.clip(T,0.0,1.0)
  
  return T</string_value>
          </python>
