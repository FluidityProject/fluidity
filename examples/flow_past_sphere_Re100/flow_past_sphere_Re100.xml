<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">
<!-- Drag calculation in 3D flow past sphere at Reynolds number 100 -->
<testproblem>
  <name>flow_past_sphere_Re100</name>
  <owner userid="piggt01"/>
  <tags>flml</tags>
  <problem_definition length="long" nprocs="8">
    <command_line>mpiexec flredecomp -i 1 -o 8 -v -l flow_past_sphere_Re100 flow_past_sphere_Re100_flredecomp &amp;&amp;
mpiexec fluidity -v1 -l flow_past_sphere_Re100_flredecomp.flml</command_line>
  </problem_definition>
  <variables>
    <variable name="time_average_xforce" language="python">
import fluidity_tools
s = fluidity_tools.stat_parser("flow_past_sphere_Re100.stat")
print(s["0"]["Velocity"]["force_sphere%1"][-20:])
time_average_xforce = sum(s["0"]["Velocity"]["force_sphere%1"][-20:])/20
print(time_average_xforce)
</variable>
    <variable name="exact_xforce" language="python">
from math import pi
def drag(Re):
# Correlation to lab data from Brown and Lawler (2003)
    Cd = (24.0/Re)*(1.0 + 0.15*(Re**0.681)) + 0.407/(1.0 + (8710.0/Re))
    return Cd

Re = 100
exact_xforce = drag(Re)*(0.5*1.0*1.0*pi/4.0)
print(exact_xforce)
</variable>
  </variables>
  <pass_tests>
    <test name="relative drag force difference (2%)." language="python">
print (100.0*abs(time_average_xforce - exact_xforce)/exact_xforce)
assert(abs(time_average_xforce - exact_xforce)/exact_xforce &lt; 0.02)
    </test>
  </pass_tests>
  <warn_tests>
    <test name="relative drag force difference (1%)." language="python">
assert(abs(time_average_xforce - exact_xforce)/exact_xforce &lt; 0.01)
    </test>
  </warn_tests>
</testproblem>
